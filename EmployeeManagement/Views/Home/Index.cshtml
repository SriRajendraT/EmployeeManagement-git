@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";

}
<div class="card-deck imageThumbnail">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "emp2.jpg");
        <div style="display:inline-flex;">
            <div class="card m-4 text-white" style="min-width:20rem;max-width:30%;background: rgba(0,0,0,.2);">
                <div class="card-header text-center">
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top img-thumbnail" src="@photoPath" asp-append-version="true" style="width:auto;height:200px;background:rgba(0,0,0,.2)" />
                <div class="card-footer" style="display:flex">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId" class="btn btn-primary m-1" style="width:auto;">
                        <div style="display:flex;">
                            <span class="material-symbols-outlined">
                                visibility
                            </span> View
                        </div>
                    </a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@employee.EncryptedId" class="btn btn-secondary m-1" style="width:auto;">
                        <div style="display:flex;">
                            <span class="material-symbols-outlined">
                                edit
                            </span> Edit
                        </div>
                    </a>
                    <a href="#" class="btn btn-danger m-1" style="width:auto;">
                        <div style="display:flex;">
                            <span class="material-symbols-outlined">
                                delete
                            </span> Delete
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
