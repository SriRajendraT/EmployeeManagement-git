@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "emp2.jpg");
}

<h3 class="text-white">@Model.PageTitle</h3>



<div class="row justify-content-center">
    <div class="col-sm-5">
        <div class="card" style="background: rgba(0,0,0,.2);color:white">
            <div class="card-header text-center">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top img-thumbnail" src="@photoPath" asp-append-version="true" />
                <h4>Employee Id : @Model.Employee.Id</h4>
                <h4>Employee Email : @Model.Employee.Email</h4>
                <h4>Employee Department : @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-dark" style="width:auto;">
                    <div style="display:flex;">
                        <span class="material-symbols-outlined">
                            undo
                        </span> Back
                    </div>
                </a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-primary" style="width:auto;">
                    <div style="display:flex;">
                        <span class="material-symbols-outlined">
                            edit
                        </span> Edit
                    </div>
                </a>
                <a href="#" class="btn btn-danger" style="width:auto;">
                    <div style="display:flex;">
                        <span class="material-symbols-outlined">
                            delete
                        </span> Delete
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}