@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}
<div class="text-white">
    <h1>User Registration</h1>

    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label><span class="top"></span>

                    <input asp-for="Email" class="form-control" style="background:rgba(0,0,0,.2);color:white;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" style="background:rgba(0,0,0,.2);color:white;" />
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" style="background:rgba(0,0,0,.2);color:white;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" style="background:rgba(0,0,0,.2);color:white;" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <center>
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        <div style="display:flex"><i class="fa-regular fa-address-card"></i>&nbsp; <span>Register</span></div>
                    </button>
                    <a asp-action="index" asp-controller="home" class="btn btn-secondary" style="width:auto" >
                        <div style="display:flex;">
                            <span class="material-symbols-outlined">
                                undo
                            </span> Back
                        </div>
                    </a>
                </center>
            </form>
        </div>
    </div>
</div>