@model AddPasswordViewModel
<h2 class="text-white">********Add Password********</h2>
<hr />

<p class="text-white text-bg-info">
    You have used an external account to login and do not have a local username/password.
    Simply Set a new password if you want to login using a local account .Use you email as user name.
</p>
<br />
<div class="row text-white">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" style="background:rgba(0,0,0,.2);" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" style="background:rgba(0,0,0,.2);" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="width:auto;">
                <div style="display:flex">
                    <span class="material-symbols-outlined">
                        encrypted
                    </span> Update
                </div>
            </button>
            <a asp-action="index" asp-controller="home" class="btn btn-secondary" style="width:auto;">
                <div style="display:flex">
                    <span class="material-symbols-outlined">
                        undo
                    </span> Back
                </div>
            </a>
        </form>
    </div>
</div>