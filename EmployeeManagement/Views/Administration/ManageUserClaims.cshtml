@model UserClaimsViewModel
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.UserId" />
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">
                <div style="display:flex;">
                    <span class="material-symbols-outlined">
                        update
                    </span>&nbsp; Update
                </div>
            </button>
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-secondary" style="width:auto;">
                <div style="display:flex;">
                    <span class="material-symbols-outlined">
                        undo
                    </span>&nbsp; Back
                </div>
            </a>
        </div>
    </div>
</form>